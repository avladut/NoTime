<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
     
  <TextView android:id="@+id/task_title" 
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:textAppearance="?android:attr/textAppearanceMedium" />
  
  <TextView android:id="@+id/task_details" 
  android:layout_width="wrap_content"
  android:layout_height="wrap_content" 
  android:textAppearance="?android:attr/textAppearanceMedium" />
  
  <TextView android:id="@+id/task_path" 
  android:layout_width="wrap_content"
  android:layout_height="wrap_content" 
  android:textAppearance="?android:attr/textAppearanceMedium" />
  
  <TextView android:id="@+id/task_state" 
  android:layout_width="wrap_content"
  android:layout_height="wrap_content" 
  android:textAppearance="?android:attr/textAppearanceMedium" />
  
  <TextView android:id="@+id/task_importance" 
  android:layout_width="wrap_content"
  android:layout_height="wrap_content" 
  android:textAppearance="?android:attr/textAppearanceMedium" />
  
  <TextView android:id="@+id/task_tags" 
  android:layout_width="wrap_content"
  android:layout_height="wrap_content" 
  android:textAppearance="?android:attr/textAppearanceMedium" />
  
  <TextView android:id="@+id/task_deadline" 
  android:layout_width="wrap_content"
  android:layout_height="wrap_content" 
  android:textAppearance="?android:attr/textAppearanceMedium" />
    

</LinearLayout>